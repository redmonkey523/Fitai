{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "name": "FitAI Design Tokens",
  "version": "1.0.0",
  "description": "Cyberpunk-inspired design system for fitness app",
  
  "color": {
    "background": {
      "primary": "#0A0A0F",
      "secondary": "#121218",
      "tertiary": "#1A1A24",
      "card": "#16161E",
      "modal": "#1E1E28",
      "_comment": "Deep blacks with blue undertones"
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "#B8B8C0",
      "tertiary": "#6E6E78",
      "disabled": "#4A4A52",
      "_comment": "White to gray scale for readability"
    },
    "accent": {
      "primary": "#00FFFF",
      "secondary": "#FF00FF",
      "tertiary": "#00AAFF",
      "quaternary": "#FF5500",
      "success": "#00FF66",
      "error": "#FF0055",
      "warning": "#FFAA00",
      "_comment": "Neon colors for cyberpunk aesthetic"
    },
    "border": {
      "primary": "#2A2A32",
      "secondary": "#3A3A42",
      "accent": "#00FFFF",
      "_comment": "Subtle borders that don't overpower"
    },
    "gradient": {
      "primary": ["#00FFFF", "#0066FF"],
      "secondary": ["#FF00FF", "#9900FF"],
      "tertiary": ["#00AAFF", "#0033FF"],
      "workout": ["#FF5500", "#FF0055"],
      "progress": ["#00FF66", "#00AAFF"],
      "_comment": "Gradient pairs [start, end]"
    },
    "utility": {
      "divider": "#2A2A32",
      "overlay": "rgba(0, 0, 0, 0.7)",
      "shadow": "rgba(0, 0, 0, 0.8)",
      "glass": "rgba(30, 30, 40, 0.7)",
      "_comment": "Utility colors for overlays and separators"
    },
    "_semantic": {
      "surface": "$color.background.card",
      "onSurface": "$color.text.primary",
      "onSurfaceVariant": "$color.text.secondary",
      "surfaceVariant": "$color.background.secondary",
      "_comment": "Semantic mappings for Material Design alignment"
    }
  },
  
  "space": {
    "xs": 4,
    "sm": 8,
    "md": 12,
    "lg": 16,
    "xl": 24,
    "xxl": 32,
    "xxxl": 48,
    "_comment": "Spacing scale in dp/pt (4px base unit)"
  },
  
  "radius": {
    "xs": 4,
    "sm": 8,
    "md": 12,
    "lg": 16,
    "xl": 24,
    "round": 9999,
    "_comment": "Border radius scale"
  },
  
  "elevation": {
    "none": 0,
    "sm": 2,
    "md": 4,
    "lg": 6,
    "xl": 10,
    "_comment": "Shadow elevation levels (Android elevation)"
  },
  
  "shadow": {
    "small": {
      "shadowColor": "$color.utility.shadow",
      "shadowOffset": {"width": 0, "height": 2},
      "shadowOpacity": 0.25,
      "shadowRadius": 3.84,
      "elevation": 2
    },
    "medium": {
      "shadowColor": "$color.utility.shadow",
      "shadowOffset": {"width": 0, "height": 4},
      "shadowOpacity": 0.3,
      "shadowRadius": 4.65,
      "elevation": 4
    },
    "large": {
      "shadowColor": "$color.utility.shadow",
      "shadowOffset": {"width": 0, "height": 6},
      "shadowOpacity": 0.37,
      "shadowRadius": 7.49,
      "elevation": 6
    },
    "glow": {
      "shadowColor": "$color.accent.primary",
      "shadowOffset": {"width": 0, "height": 0},
      "shadowOpacity": 0.5,
      "shadowRadius": 10,
      "elevation": 10,
      "_comment": "Neon glow effect for accents"
    }
  },
  
  "typography": {
    "fontFamily": {
      "primary": "System",
      "secondary": "System",
      "monospace": "Courier",
      "_comment": "Will be replaced with custom fonts (e.g., Orbitron for cyberpunk)"
    },
    "fontSize": {
      "xs": 12,
      "sm": 14,
      "md": 16,
      "lg": 18,
      "xl": 20,
      "xxl": 24,
      "xxxl": 32,
      "title": 40,
      "_comment": "Font sizes in sp (scales with user's text size settings)"
    },
    "fontWeight": {
      "light": "300",
      "regular": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700",
      "black": "900"
    },
    "lineHeight": {
      "tight": 1.2,
      "normal": 1.5,
      "relaxed": 1.75,
      "_comment": "Line height multipliers"
    },
    "letterSpacing": {
      "tight": -0.5,
      "normal": 0,
      "wide": 0.5,
      "wider": 1,
      "_comment": "Letter spacing in pt"
    }
  },
  
  "iconSize": {
    "xs": 16,
    "sm": 20,
    "md": 24,
    "lg": 32,
    "xl": 40,
    "xxl": 64,
    "_comment": "Icon sizes for Ionicons"
  },
  
  "touchTarget": {
    "min": 48,
    "comfortable": 56,
    "_comment": "Minimum touch target size (iOS HIG 44pt, Material 48dp)"
  },
  
  "buttonHeight": {
    "sm": 36,
    "md": 48,
    "lg": 56,
    "_comment": "Standard button heights"
  },
  
  "animation": {
    "durationFast": 200,
    "durationNormal": 300,
    "durationSlow": 500,
    "easing": {
      "easeIn": "cubic-bezier(0.4, 0.0, 1, 1)",
      "easeOut": "cubic-bezier(0.0, 0.0, 0.2, 1)",
      "easeInOut": "cubic-bezier(0.4, 0.0, 0.2, 1)",
      "_comment": "Cubic bezier curves for animations"
    }
  },
  
  "breakpoints": {
    "phone": 0,
    "tablet": 768,
    "desktop": 1024,
    "_comment": "Responsive breakpoints (web disabled but future-ready)"
  },
  
  "_usage": {
    "_comment": "Usage guide",
    "example": {
      "backgroundColor": "$color.background.card",
      "padding": "$space.md",
      "borderRadius": "$radius.md",
      "shadowPreset": "$shadow.medium"
    }
  }
}

